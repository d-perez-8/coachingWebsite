                    span.text-nav.fs-lg.fw-medium 10:00
                    span(style='width: 36px; height: 1px;').border-top.mx-4
                    span.text-nav.fs-lg.fw-medium 22:00
                li
                  span.d-block.fs-sm.text-muted.mb-1 Fri - Sat
