        // Email
        .col
          .card.border-0.h-100
            .card-body
              h4.card-title.mb-4 Email
              ul.list-unstyled.mb-0
                li.pb-1.mb-2
                  span.d-block.fs-sm.text-muted.mb-1 Main office
                  a(href='mailto:office@example.com').nav-link.fs-lg.p-0 office@example.com
                li
                  span.d-block.fs-sm.text-muted.mb-1 Reception room
                  a(href='mailto:reception@example.com').nav-link.fs-lg.p-0 reception@example.com
    
