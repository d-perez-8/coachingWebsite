      +breadcrumb([{'title': 'Contacts v.1'}]).pt-lg-3.pb-lg-4.pb-2

      // Page title
      h1.display-2 Contacts
      p.fs-lg.pb-4.mb-2.mb-sm-3 Get in touch with us by completing the below form or call us now

      // Details cards
      .row.row-cols-1.row-cols-sm-2.row-cols-xl-4.g-4.pb-2.pb-sm-4.pb-lg-5
        
        // Address
        .col
          .card.border-0.h-100
            .card-body
              h4.card-title.mb-4 Address
              p.fs-lg.fw-medium.pb-3.mb-3 514 Magnolia St. Orlando, FL 32806
              a(href='#').btn.btn-sm.btn-outline-primary
                i.ai-map-pin.me-1
                | Get directions
        
        // Phone
        .col
          .card.border-0.h-100
            .card-body
              h4.card-title.mb-4 Phone
              ul.list-unstyled.mb-0
                li.pb-1.mb-2
