//- Blog sidebar (offcanvas on sreens < 992px)
#sidebarBlog.offcanvas-lg.offcanvas-end
  .offcanvas-header
    h4.offcanvas-title Sidebar
    button(type='button' data-bs-dismiss='offcanvas' data-bs-target='#sidebarBlog').btn-close.ms-auto

  .offcanvas-body

    // Search box
    .position-relative.mb-4.mb-lg-5
      i.ai-search.position-absolute.top-50.start-0.translate-middle-y.ms-3
      input(type='search' placeholder='Enter keyword').form-control.ps-5

    // Category links
    h4.pt-1.pt-lg-0.mt-lg-n2 Categories:
    ul.nav.flex-column.mb-lg-5.mb-4
      li.mb-2
        a(href='#').nav-link.d-flex.p-0.active
          | All categories
          span.fs-sm.text-muted.ms-2 (110)
