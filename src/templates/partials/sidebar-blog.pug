      a(href='#').btn.btn-secondary.btn-icon.btn-sm.btn-instagram.rounded-circle.mt-3.ms-3
        i.ai-instagram
      a(href='#').btn.btn-secondary.btn-icon.btn-sm.btn-facebook.rounded-circle.mt-3.ms-3
        i.ai-facebook
      a(href='#').btn.btn-secondary.btn-icon.btn-sm.btn-telegram.rounded-circle.mt-3.ms-3
        i.ai-telegram
      a(href='#').btn.btn-secondary.btn-icon.btn-sm.btn-twitter.rounded-circle.mt-3.ms-3
        i.ai-twitter
    
