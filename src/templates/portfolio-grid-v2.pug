              .d-flex.justify-content-between.fs-lg.text-muted
                span Web design
                span 2020

      
      // Load more button
      .text-center.pb-sm-2.pb-md-4.mt-n1.mt-lg-n2
        button(type='button').btn.btn-lg.btn-outline-dark.rounded-0 Load more projects
        

//- Footer
block footer
  include partials/footer-portfolio.pug
